{
  "name": "book-api",
  "version": "1.0.0",
  "main": "dist/server.js",
  "scripts": {
    "migrate:dev" : "NODE_ENV=development drizzle-kit generate && NODE_ENV=development drizzle-kit migrate",
    "test": "jest",
    "test:unit": "npx jest --testPathPattern=tests/unit",
    "test:integration": "npx jest --testPathPattern=tests/integration --forceExit",
    "start": "NODE_ENV=development ts-node src/server.ts",
    "dev": "NODE_ENV=development nodemon src/server.ts",
    "migrate:prod" : "NODE_ENV=production drizzle-kit generate && NODE_ENV=production drizzle-kit migrate",
    "build": "tsc",
    "start:prod": "NODE_ENV=production node dist/server.js"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "rootDir": "./src"
  },
  "keywords": [],
  "author": "fpetrungaro",
  "license": "ISC",
  "description": "Book API",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/fpetrungaro/fpbooks.git"
  },
  "bugs": {
    "url": "https://github.com/fpetrungaro/fpbooks/issues"
  },
  "homepage": "https://github.com/fpetrungaro/fpbooks#readme",
  "dependencies": {
    "bcrypt": "^5.1.1",
    "cors": "^2.8.5",
    "dotenv": "^16.4.7",
    "drizzle-kit": "^0.30.2",
    "drizzle-orm": "^0.38.4",
    "express": "^4.21.2",
    "express-validator": "^7.2.1",
    "jsonwebtoken": "^9.0.2",
    "mysql2": "^3.12.0",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1",
    "winston": "^3.17.0",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.2",
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.0",
    "@types/jest": "^29.5.14",
    "@types/jsonwebtoken": "^9.0.7",
    "@types/node": "^22.10.7",
    "@types/supertest": "^6.0.2",
    "jest": "^29.7.0",
    "nodemon": "^3.1.9",
    "supertest": "^7.0.0",
    "ts-jest": "^29.2.5",
    "ts-node": "^10.9.2",
    "typescript": "^5.7.3"
  }
